{% style %}
  #section-{{ section.id }}{background:{{ section.settings.bg_color }};}
  #section-{{ section.id }} .badge_text:before{ background: url('{{ section.settings.badge_image_bg | img_url: 'master' }}') no-repeat; background-size: contain; }
  #section-{{ section.id }} h1{color:{{ section.settings.title_color }};}
  #section-{{ section.id }} p{color:{{ section.settings.desc_color }};}
{% endstyle %}

<section class="Section Section--spacingNormal about_banner_section" id="section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="Container">
    <header class="PageHeader">
      <div class="SectionHeader SectionHeader--center">
        <div class="col-left">
        {% if section.settings.title != blank %}
        <h1 class="SectionHeader__Heading Heading u-h1">{{ section.settings.title }}</h1>
        {% else %}
        <h1 class="SectionHeader__Heading Heading u-h1 sec_heading large">{{ page.title }}</h1>
        {% endif %}
        </div>
        {% if section.settings.desc != blank %}
          <div class="col-right">
        <p>{{ section.settings.desc }}</p>
          </div>
        {% endif %}
      </div>
    </header>
    {% if section.settings.badge_image != blank %}
      <div class="about_badge Container animate">
        <div class="badge_inner">
          <span class="badge_text">{{ section.settings.badge_image }}</span>
        </div>
      </div>
    {% endif %}
  </div>
</section>


