{% style %}
    #section-{{ section.id }}{
      background:{{ section.settings.bg_color }};
      padding-top: 50px;
      padding-bottom: 50px;
  }
  @media(min-width:992px){
    #section-{{ section.id }}{
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}
<section class="Section Section--spacingNormal text_with_overlay" id="section-{{ section.id }}">
  <div class="Container">
    {%- if section.settings.best_image != blank -%}
        <figure class="best-seller-img"><img src="{{ section.settings.best_image | img_url: 'master' }}" /></figure>
    {%- endif -%}
    <div class="text_block content_wrapper">
      <div class="left_block">
        <div class="left_block_desc">
          {%- if section.settings.content_title_01 != blank -%}
            <h2>{{ section.settings.content_title_01 }}</h2>
          {%- endif -%}
          {%- if section.settings.content_desc_01 != blank -%}
            <p>{{ section.settings.content_desc_01 }}</p>
          {%- endif -%}
          <div>
          {%- if section.settings.content_list_1_title_01 != blank -%}
            <h3>{{ section.settings.content_list_1_title_01 }}</h3>
          {%- endif -%}
          {%- if section.settings.content_list_1_desc_01 != blank -%}
            <ul class="flex_always">{{ section.settings.content_list_1_desc_01 }}</ul>
          {%- endif -%}
          </div>
          <div>
          {%- if section.settings.content_list_1_title_02 != blank -%}
            <h3>{{ section.settings.content_list_1_title_02 }}</h3>
          {%- endif -%}
          {%- if section.settings.content_list_1_desc_02 != blank -%}
            <ul class="flex_always">{{ section.settings.content_list_1_desc_02 }}</ul>
          {%- endif -%}
          </div>
        </div>
        <div class="left_block_desc block_2">
          {%- if section.settings.content_title_02 != blank -%}
            <h2>{{ section.settings.content_title_02 }}</h2>
          {%- endif -%}
          {%- if section.settings.content_desc_02 != blank -%}
            <p>{{ section.settings.content_desc_02 }}</p>
          {%- endif -%}
          {%- if section.settings.content_list_2_title_01 != blank -%}
            <h3>{{ section.settings.content_list_2_title_01 }}</h3>
          {%- endif -%}
          {%- if section.settings.content_list_2_desc_01 != blank -%}
            <ul class="flex">{{ section.settings.content_list_2_desc_01 }}</ul>
          {%- endif -%}
          {%- if section.settings.content_list_2_title_02 != blank -%}
            <h3>{{ section.settings.content_list_2_title_02 }}</h3>
          {%- endif -%}
          {%- if section.settings.content_list_2_desc_02 != blank -%}
            <ul class="flex">{{ section.settings.content_list_2_desc_02 }}</ul>
          {%- endif -%}
        </div>
      </div>
      {%- if section.settings.image != blank -%}
      <div class="center_block">
        <span class="image_back"><img src="{{ 'milk-back.png' | file_url }}" alt=""/></span>
        <figure class="sec_image"><img src="{{ section.settings.image | img_url: 'master' }}" /></figure>
        <span class="image_front"><img src="{{ 'milk-front.png' | file_url }}" alt=""/></span>
      </div>
      {%- endif -%}
      <div class="right_block">
        <ul>
          {%- for block in section.blocks -%}
            {%- if block.settings.image != blank or block.settings.image_png != blank and block.settings.title != blank -%}
              <li class="flex_always">
              {% if block.settings.image_png != blank %}
                <figure><img src="{{ block.settings.image_png | img_url: 'master' }}" /></figure>
              {% else %}
              {{ block.settings.image }}
              {% endif %}
              <span>{{ block.settings.title }}</span></li>
            {%- endif -%}
          {%- endfor -%}
        </ul>
      </div>
    </div>
  </div>
</section>

