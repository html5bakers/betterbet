{% style %}
    #section-{{ section.id }}{
      background:{{ section.settings.bg_color }};
      padding-top: 50px;
      padding-bottom: 50px;
  }
  @media(min-width:992px){
    #section-{{ section.id }}{
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}
<section class="Section Section--spacingNormal content_strip_section" id="section-{{ section.id }}">
    <ul class="content_strip slick" data-slick='{
     "dots": false,
     "arrows": true,
     "draggable": true,
     "slidesToShow": 3,
     "slidesToScroll": 1,
     "autoplay": true,
     "autoplaySpeed": 0,
     "speed": 8000,
     "pauseOnHover": false,
     "cssEase": 'linear'
     }'>
      {%- for block in section.blocks -%}
      {%- if block.settings.title != blank -%}
      <li>{{ block.settings.title }}</li>
      {%- endif -%}
      {%- endfor -%}
    </ul>
</section>

{% schema %}
  {
    "name": "Content Strip",
    "settings": [
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 250,
        "step": 5,
        "unit": "px",
        "label": "Padding Top",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 250,
        "step": 5,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 0
      },
      {
        "type": "header",
        "content": "Background"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      }
    ],
    "blocks": [
      {
        "type": "Text",
        "name": "Text",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Heading"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Content Strip",
        "category": "Text"
      }
    ]
  }
{% endschema %}

