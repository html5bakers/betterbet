{% style %}
  #section-{{ section.id }}{
    background:{{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  @media(max-width:640px){
    #section-{{ section.id }}{
      padding-top:50px;
      padding-bottom:50px;
    }
  }
  {% endstyle %}
{%- capture flickity_options -%}
{
  "prevNextButtons": false,
  "wrapAround": true,
  "dragThreshold": 15,
  "pauseAutoPlayOnHover": false,
}
{%- endcapture -%}

<section class="Section Section--spacingNormal custom_reviews" id="section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="Container">
    {% if section.settings.title != blank %}
    <h2>{{ section.settings.title }}</h2>
    {% endif %}
    <ul class="reviews Slideshow__Carousel Carousel--insideDots"
         data-flickity-config='{{ flickity_options }}'>
      {% for block in section.blocks %}
      <li>
        <div class="review_rating">
          {%- if block.settings.star == '1' -%}
            {% include 'star' %}
          {%- elsif block.settings.star == '2' -%}
            {% include 'star' %}{% include 'star' %}
          {%- elsif block.settings.star == '3' -%}
            {% include 'star' %}{% include 'star' %}{% include 'star' %}
          {%- elsif block.settings.star == '4' -%}
            {% include 'star' %}{% include 'star' %}{% include 'star' %}{% include 'star' %}
          {%- elsif block.settings.star == '5' -%}
            {% include 'star' %}{% include 'star' %}{% include 'star' %}{% include 'star' %}{% include 'star' %}
          {%- endif -%}
        </div>
        {%- if block.settings.desc != blank -%}
        <p>{{ block.settings.desc }}</p>
        {%- endif -%}
        <div class="review_text">
        <div class="col_left">
        {%- if block.settings.image != blank -%}
        <figure><img src="{{ block.settings.image | img_url: 'master' }}" /></figure></h3>
        {%- endif -%}
        </div>
        <div class="col_right">
        {%- if block.settings.title != blank -%}
        <span class="author_name">{{ block.settings.title }}</span>
          {%- endif -%}
          {%- if block.settings.designation != blank -%}
          <span class="designation">{{ block.settings.designation }}</span>
          {%- endif -%}
        </div>
        </div>
      </li>
      {% endfor %}
    </ul>
  </div>
</section>

{% schema %}
  {
    "name": "Custom Review",
    "settings": [
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 250,
        "step": 5,
        "unit": "px",
        "label": "Padding Top",
        "default": 0
      }, 
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 250,
        "step": 5,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 0
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "type": "Review",
        "name": "Review",
        "settings": [
          {
            "type": "select",
            "id": "star",
            "label": "Star",
            "options": [
              {
                "value": "5",
                "label": "5"
              },
              {
                "value": "4",
                "label": "4"
              },
              {
                "value": "3",
                "label": "3"
              },
              {
                "value": "2",
                "label": "2"
              },
              {
                "value": "1",
                "label": "1"
              }
            ]
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Author Name"
          },
          {
            "type": "text",
            "id": "designation",
            "label": "Designation"
          },
          {
            "type": "textarea",
            "id": "desc",
            "label": "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Collection Review",
        "category": "Review"
      }
    ]
  }
{% endschema %}

