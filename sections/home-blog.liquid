<section class="Section Section--spacingNormal home_blog_section" id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="slideshow">
  <div class="Container">
    {% if section.settings.title != blank %}
    <h2>{{ section.settings.title }}</h2>
    {% endif %}
    <div class="home_blog">
      {% assign blog = blogs[section.settings.blog] %}
      {% for article in blog.articles limit:1 %}
      <div class="col_left">
        <figure><a href="{{ article.url }}"><img src="{{ article.image | img_url: 'master' }}" /></a></figure>
        <div class="home_blog_left_desc">
          <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
          <p>{{ article.content | strip_html | truncatewords: 75 }}</p>
        <div class="blog-tag-list"><div class="blog-tag-left">{% for tag in article.tags %}<span>{{ tag }}</span>{% endfor %}</div>
        <div class="blog-tag-right"></div></div>
        </div>
      </div>
      {% endfor %}
      <div class="col_right">
        {% for article in blog.articles offset:1 limit:2 %}
        <div class="home_blog_right_list">
          <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
          <p>{{ article.content | strip_html | truncatewords: 75 }}</p>
        <div class="blog-tag-list">{% for tag in article.tags %}<span>{{ tag }}</span>{% endfor %}</div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Home Blog",
    "settings": [
      {
        "type": "checkbox",
        "id": "enabled_home_blog",
        "label": "Show Home Blog",
        "default": true
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "blog",
        "id": "blog",
        "label": "Blog"
      }
    ],
    "presets": [
      {
        "name": "Home Blog",
        "category": "Blog"
      }
    ]
  }
{% endschema %}

