{%- if section.settings.enabled_review_topbar -%}
<section class="Section Section--spacingNormal review_topbar_section" id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="slideshow">
  <div class="Container">
    <div class="review_topbar">
      {%- if section.settings.left_title != blank -%}
      <div class="review_topbar_left">
        <h2>{{ section.settings.left_title }}</h2>
      </div>
      {%- endif -%}
  {%- if section.settings.left_title != blank or section.settings.right_title_image != blank -%}
      <div class="review_topbar_right">
        {% if section.settings.right_title_image != blank %}
        <figure><img src="{{ section.settings.right_title_image | img_url: 'master' }}" alt="{{ section.settings.left_title }}" title="{{ section.settings.left_title }}" /></figure>
        {% else %}
        <h2>{{ section.settings.left_title }}</h2>
        {% endif %}
      </div>
  {%- endif -%}
    </div>
  </div>
</section>
{%- endif -%}


{% schema %}
  {
    "name": "Review Topbar",
    "settings": [
      {
        "type": "checkbox",
        "id": "enabled_review_topbar",
        "label": "Show Review Topbar",
        "default": true
      },
      {
        "type": "text",
        "id": "left_title",
        "label": "Left Heading"
      },
      {
        "type": "image_picker",
        "id": "right_title_image",
        "label": "Right Heading Image"
      },
      {
        "type": "text",
        "id": "right_title",
        "label": "Right Heading"
      }
    ]
  }
{% endschema %}

