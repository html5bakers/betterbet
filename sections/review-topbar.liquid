{% schema %}
  {
    "name": "Review Topbar",
    "settings": [
      {
        "type": "checkbox",
        "id": "enabled_review_topbar",
        "label": "Show Review Topbar",
        "default": true
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      },
      {
        "type": "text",
        "id": "left_title",
        "label": "Left Heading"
      }
    ],
    "blocks": [
      {
        "type": "Image",
        "name": "Image",
         "settings": [
           {
              "type": "image_picker",
              "id": "review_image",
              "label": "Image"
            }
         ]
      }
    ],
    "presets": [
      {
        "name": "Review Topbar",
        "category": "Review"
      }
    ]
  }
{% endschema %}
