<section class="Section Section--spacingNormal text_logo_section" id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="slideshow">
  <div class="Container">
    {% if section.settings.desc != blank %}
    <p>{{ section.settings.desc }}</p>
    {% endif %}
    <div class="text_logo">
      <ul>
        {% for block in section.blocks %}
        <li class="color-{{ block.id }}">
          <figure><img src="{{ block.settings.bg_image | img_url: 'master' }}"></figure>
          <h4>{{ block.settings.title }}</h4>
        </li>
        {% style %}
          .color-{{ block.id }} h4{color:{{block.settings.text_color}};}
          {% endstyle %}
          
        {% endfor %}
      </ul>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Text Logo",
    "settings": [
      {
        "type": "checkbox",
        "id": "enabled_text_logo",
        "label": "Show Text Logo",
        "default": true
      },
      {
        "type": "textarea",
        "id": "desc",
        "label": "Description"
      }
    ],
    "blocks": [
      {
        "type": "Text",
        "name": "Text",
        "settings": [
          {
            "type": "image_picker",
            "id": "bg_image",
            "label": "Background Image"
          },
          {
            "type": "color",
            "id": "text_color",
            "label": "Text Color"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Text Logo",
        "category": "Logo"
      }
    ]
  }
{% endschema %}

